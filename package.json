{
  "name": "@anthropic-tools/12-agentops-checker",
  "version": "1.0.0",
  "description": "Universal 12-Factor AgentOps analyzer, assessor, and scaffolder. MCP + CLI.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "agentops-check": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli/index.ts",
    "start:mcp": "tsx src/mcp/index.ts",
    "start:cli": "tsx src/cli/index.ts",
    "lint": "eslint src tests --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "self-apply": "tsx src/cli/index.ts scaffold . --apply",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "ai-agents",
    "agentops",
    "12-factor",
    "mcp",
    "claude",
    "linter"
  ],
  "author": "calexandrepcjr",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/calexandrepcjr/12-agentops-checker.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "glob": "^10.3.0",
    "yaml": "^2.3.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "agentops": {
    "lint": {
      "ignore": [
        "f02",
        "f05",
        "f06",
        "f08",
        "f10",
        "f11"
      ]
    }
  }
}